<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<!----------------------------0-Includes---------------------------------->
		<title>Boss</title>
		{% block includes %}
			{% include 'partials/includes.html.twig' %}
		{% endblock %}
		<!--0-Includes Boss -->
		<script type='text/javascript' language='javascript' src='../BossJs/commercial/client_form.js'></script>
		<script type='text/javascript' language='javascript' src='../BossJs/system/js_utilities.js'></script>
		<script type='text/javascript' language='javascript' src='../BossJs/system/js_variables_globales_std.js'></script>
		<!--script type='text/javascript' language='javascript' src='../BossIncludes/controle_saisies.js'></script-->
	</head>
	<body>
		<!----------------------------1-Variables js---------------------------------->
		<input type="hidden" id="routeRouteur" value="{{path('system_routeur')}}"/>
		<input type="hidden" id="nodeCourant" value="{{nodeCourant}}">
		<input type="hidden" id="timeOut" value="{{configNode['timeOutPage']}}"/>
		<input type="hidden" id="contraintesChamps" value="{{contraintes_champs_json}}"/>

		<div class="container">
		<!-------------------- 2-Notifications -------------------------->
		{% if notificationsWarning|length > 0  or notificationsNotice|length > 0%}
			<div id="notification_msg" style="border:solid ; color:WhiteSmoke; ">											
					{% for warning in  notificationsWarning %}
						<p class="mb-0" style=" color: red">-{{warning}}</p>
					{% endfor %}
					{% for notice in  notificationsNotice %}
						<p class="mb-0" style=" color: blue">-{{notice}}</p>
					{% endfor %}
		
			</div>
		{% endif %}
		<!----------------------------3-Loader------------------------------------>
		<div id="loader" class="ld ld-ring ld-spin"></div>
		<!-------------------- 4-Titre et commentaires -------------------------->
			<h2 id="titre">	<strong>{{titre}}</strong> </h2>
			<h3 id="titre">{{configNode["sousTitre"]}}</h3>

			<div style="background-color:#F4F6F6;">
				<h4> {{configNode["commentaireTitre"]}} </h4>
				<h5 id="commentaire" style="font: font: italic 1.2rem 'Fira Sans', serif;">{{configNode["commentaire"]}}
				</h5>
			</div>

			<div>
				<p id="alarme"></p>
			</div>
			<!-------------------- 5-Commandes ------------------------->

			<!--------------------10-Declaration formulaire ------------------------->
		
			<!--form
				id="myform" action="" method="post" name="form"-->
				<!----------------------------4-boutons outillage------------------>
				<div class="container">
{{ form_start(form) }}
				<!---boutons Acces aux outils communs commande groupe A---->
					<!--div class='row'-->
		
					<HR align="center" size="1" width='99%' style='padding-left:2px;  margin-top:2px;margin-bottom:2px;border-top: 1px solid #2e2c2c;'>
						{% for cmd in cmdeOutils %}
							<button id={{cmd[0]}} class="btn btn-round btn-icon-only" 
								style="color:{{cmd[3]}};
								background-color:{{cmd[4]}};
								visibility:visible;
								margin-bottom:5px;margin-left:5px;border-radius: 10%;">
												{{cmd[5]}}
							</button>
						{% endfor %}
					<HR align="center" size="1" width='99%' style='margin-top:2px;margin-bottom:2px;border-top: 1px solid #2e2c2c;'>
						<button type="submit" class="pull-left" 
								style="color:#1b4f72;
								background-color:###a9cce3;
								margin-bottom:5px;margin-left:5px;border-radius: 10%;">{{txtLang_texte_Form['txt_submit']}}</button>
						<button id="retour" class="pull-left" 
								style="color:1b4f72;
								background-color:###d7dbdd;
								margin-bottom:5px;margin-left:5px;border-radius: 10%;">{{txtLang_texte_Form['txt_cancel']}}</button>
	
				</div>
		
				<!-------------------- 6 Formulaire -------------------------------------->
				<!--champ 1 -->
				<div class='col-sm-4'>
					{{form_label(form.nom, txtLang_texte_Form['frm_1_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.nom,{'id': 'id_1','attr':{'class':'form-control'}})}}
				</div>
				<!--champ 2 -->
				<div class='col-sm-4'>
					{{form_label(form.ville, txtLang_texte_Form['frm_2_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.ville,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 3 -->
				<div class='col-sm-4'>
					{{form_label(form.pays, txtLang_texte_Form['frm_3_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.pays,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 4 -->
				<div class='col-sm-4'>
					{{form_label(form.addPostale, txtLang_texte_Form['frm_4_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}						
					{{form_widget(form.addPostale,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 5 -->
				<div class='col-sm-4'>
					{{form_label(form.siteInternet, txtLang_texte_Form['frm_5_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.siteInternet,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 6 -->
				<div class='col-sm-12'>
					{{form_label(form.statusEntreprise, txtLang_texte_Form['frm_6_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.statusEntreprise,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 7 -->
				<div class='col-sm-12'>
					{{form_label(form.uidNom, txtLang_texte_Form['frm_7_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.uidNom,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 8 -->
				<div class='col-sm-12'>
					{{form_label(form.uidVal, txtLang_texte_Form['frm_8_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.uidVal,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 9 -->
				<div class='col-sm-12'>
					{{form_label(form.activite, txtLang_texte_Form['frm_9_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.activite,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 10 -->
				<div class='col-sm-12'>
					{{form_label(form.clientFourniss, txtLang_texte_Form['frm_10_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.clientFourniss,{'attr':{'class':'form-control'}})}}
				</div>
				<!--champ 11 -->
				<div class='col-sm-4'>
					{{form_label(form.rem, txtLang_texte_Form['frm_11_0'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
					{{form_widget(form.rem,{'attr':{'class':'form-control'}})}}
				</div>
			</div>

			{{ form_end(form) }}

		</div>
	</body>
</html>
