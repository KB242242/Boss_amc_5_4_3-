<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Boss</title>
		{% block includes %}
			{% include 'partials/includes.html.twig' %}
		{% endblock %}
		<!---Boss -->
		<script type='text/javascript' language='javascript' src='../BossJs/system/js_utilities.js'></script>
		<script type='text/javascript' language='javascript' src='../BossJs/system/js_variables_globales_std.js'></script>
		<script type='text/javascript' language='javascript' src='../BossJs/system/chg_pwd.js'></script>

	</head>
	<body>
		<div class="container" style=" margin-top: 10px; margin-left: 30px; margin-right: 30px;">
			<input type="hidden" id="route_retour" value="{{path('system_routeur')}}">
			<!-------------------- Notifications -------------------------->
    {% if app.session.flashbag.has('error') %}
        <div class="alert alert-danger">
            {{ app.session.flashbag.get('error')[0] }}
        </div>
    {% endif %}
			<!-------------------- Titre et commentaires -------------------------->
			<h2
				id="titre">
				{# Changer votre mot de passe #}
				<strong>{{texte_page['txt_1_0']}}</strong>
			</h2>

			<div>
				<p id="alarme"></p>
			</div>

			<!--------------------5-Declaration formulaire---------------------------->
			<form
				id="myform" action="" method="post" name="form">
				<!-------------------- 6-boutons outillage ---------------------------->
				<!--------------------------------------------------------------------->
				<div class="container">
					<div>
						<HR align="center" size="1" width="100%">
						<!----------7-boutons formulaire------------------>
						<button type="submit" class="pull-left" 
								style="color:#1b4f72;
								background-color:###a9cce3;
								margin-bottom:5px;margin-left:5px;border-radius: 10%;">{{texte_Form['txt_submit']}}</button>
						<button id="retour" class="pull-left" 
								style="color:1b4f72;
								background-color:###d7dbdd;
								margin-bottom:5px;margin-left:5px;border-radius: 10%;">{{texte_Form['txt_cancel']}}</button>
	

						<HR align="center" size="1" width="100%">
					</div>
					<!----------------- 8 champs Formulaire --------------------------->
					<div class="row">
						<div class="col-sm-4">
							{{form_label(form.oldPassword, texte_Form['txt_input_1'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
							{{form_widget(form.oldPassword,{'attr':{'class':'form-control'}})}}
						</div>
						<div class="col-sm-4">
							{{form_label(form.newPassword, texte_Form['txt_input_2'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
							{{form_widget(form.newPassword,{'attr':{'class':'form-control'}})}}
						</div>
						<div class="col-sm-4">
							{{form_label(form.confirmPassword, texte_Form['txt_input_3'],{'label_attr': {'class':'col-sm3 control-label'}}) }}
							{{form_widget(form.confirmPassword,{'attr':{'class':'form-control'}})}}
						</div>
						
	
					</div>
					{{form_rest(form)}}
				</div>
			</form>
			<!----------------------------Loader------------------------------------>
			<div id="loader" class="ld ld-ring ld-spin"></div>

		</div>
	</body>
</html></div></body></html>

