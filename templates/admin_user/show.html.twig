{% extends 'base.html.twig' %}

{% block title %}Détail Utilisateur{% endblock %}

{% block stylesheets %}
<!-- Icônes FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />

<style>
    body {
        background-color: #1e1e2f;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        color: #f5f5f5;
    }

    .admin-container {
        max-width: 800px;
        margin: 3rem auto;
        padding: 2rem;
        background-color: #2e2e42;
        border-radius: 16px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.5);
    }

    h1 {
        text-align: center;
        margin-bottom: 2rem;
        font-size: 2rem;
        color: #00ffe0;
        letter-spacing: 1px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #3c3c55;
        border-radius: 8px;
        overflow: hidden;
    }

    th, td {
        padding: 0.75rem;
        text-align: left;
        border-bottom: 1px solid #444;
    }

    th {
        background-color: #3c3c55;
        color: #00ffe0;
        font-weight: bold;
        width: 35%;
    }

    td {
        color: #f5f5f5;
    }

    .actions {
        margin-top: 2rem;
    }

    .actions a {
        display: inline-block;
        margin-right: 1rem;
        padding: 0.6rem 1.2rem;
        background-color: #00ffe0;
        color: #000;
        border-radius: 8px;
        font-weight: bold;
        text-decoration: none;
        transition: background 0.3s ease;
    }

    .actions a:hover {
        background-color: #00c6b0;
        color: white;
    }

    .actions i {
        margin-right: 6px;
    }
</style>
{% endblock %}

{% block body %}
<div class="admin-container">
    <h1>Détail de l'Utilisateur</h1>

    <table>
        <tbody>
            <tr><th>Id</th><td>{{ user.id }}</td></tr>
            <tr><th>Email</th><td>{{ user.email }}</td></tr>
            <tr><th>Nom</th><td>{{ user.nom }}</td></tr>
            <tr><th>Prénom</th><td>{{ user.prenom }}</td></tr>
            <tr><th>Pseudo</th><td>{{ user.pseudo }}</td></tr>
            <tr><th>Initiales</th><td>{{ user.initiales }}</td></tr>
            {# <tr><th>Mot de passe</th><td>{{ user.password }}</td></tr> #}
            <tr><th>Rôles</th><td>{{ user.roles ? user.roles|json_encode : '' }}</td></tr>
            <tr><th>IP Contrainte</th><td>{{ user.ipContrainte }}</td></tr>
            <tr><th>Échecs Conn.</th><td>{{ user.nbEchecConn }}</td></tr>
            <tr><th>BlackList</th><td>{{ user.blackList ? 'Oui' : 'Non' }}</td></tr>
            <tr><th>Dernière Conn.</th><td>{{ user.dateConn }}</td></tr>
            <tr><th>Context</th><td>{{ user.context }}</td></tr>
            <tr><th>RetContext</th><td>{{ user.retContext ? 'Oui' : 'Non' }}</td></tr>
            <tr><th>Remarque</th><td>{{ user.rem }}</td></tr>
            <tr><th>Validé</th><td>{{ user.valid ? 'Oui' : 'Non' }}</td></tr>
            <tr><th>Créé le</th><td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td></tr>
        </tbody>
    </table>

    <div class="actions">
        <a href="{{ path('app_admin_user_index') }}"><i class="fa-solid fa-arrow-left"></i>Retour</a>
        <a href="{{ path('app_admin_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-pen-to-square"></i>Modifier</a>
    </div>

    {{ include('admin_user/_delete_form.html.twig') }}
</div>
{% endblock %}
