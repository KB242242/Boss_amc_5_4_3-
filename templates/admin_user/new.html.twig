{% extends 'base.html.twig' %}

{% block title %}Créer un utilisateur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        body {
            background-color: #1e1e2f;
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            color: #f5f5f5;
        }

        .admin-container {
            max-width: 95%;
            margin: 3rem auto;
            padding: 2rem;
            background-color: #2e2e42;
            border-radius: 16px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.5);
        }

        h1 {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2rem;
            color: #00ffe0;
            letter-spacing: 1px;
        }

        .btn-retour {
            display: inline-block;
            margin-bottom: 1.5rem;
            padding: 0.5rem 1rem;
            background-color: #3c3c55;
            color: #00ffe0;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .btn-retour:hover {
            background-color: #4a5568;
        }

        .btn-retour i {
            margin-right: 0.5rem;
        }

        .register-form {
            /* Vous pouvez ajouter des styles spécifiques au formulaire ici si nécessaire */
        }

        .form-section {
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid #444;
        }

        .form-section:last-child {
            border-bottom: none;
        }

        .form-section h2 {
            color: #00ffe0;
            margin-top: 0;
            margin-bottom: 1.2rem;
            font-size: 1.5rem;
            letter-spacing: 0.5px;
            display: flex;
            align-items: center;
        }

        .form-section h2 i {
            margin-right: 0.8rem;
        }

        .form-row {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1rem;
        }

        .form-row .form-group {
            flex: 1;
            margin-bottom: 0;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            color: #ccc;
            margin-bottom: 0.5rem;
            font-weight: bold;
            font-size: 0.9rem;
        }

        .form-control {
            width: 100%;
            padding: 0.8rem 1rem;
            border: 1px solid #555;
            border-radius: 6px;
            background-color: #333;
            color: #f5f5f5;
            font-size: 1rem;
            box-sizing: border-box;
        }

        .form-control:focus {
            border-color: #00ffe0;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 255, 224, 0.3);
        }

        .form-check {
            display: flex;
            align-items: center;
            padding-left: 0; /* Reset default padding */
        }

        .form-check-input {
            width: auto;
            margin-right: 0.5rem;
        }

        .form-check label {
            margin-bottom: 0;
            font-weight: normal;
        }

        .btn-primary-animated {
            display: block;
            width: 100%;
            padding: 1rem 2rem;
            background-color: #00ffe0;
            color: #000;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: bold;
            text-align: center;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            box-shadow: 0 2px 5px rgba(0, 255, 224, 0.3);
        }

        .btn-primary-animated:hover {
            background-color: #00c6b0;
            color: white;
            transform: scale(1.02);
            box-shadow: 0 5px 10px rgba(0, 255, 224, 0.4);
        }

        .btn-primary-animated:active {
            transform: scale(1);
            box-shadow: 0 2px 5px rgba(0, 255, 224, 0.3);
        }

        .animate__slideInDown {
            --animate-duration: 0.75s;
        }

        .animate__slideInLeft {
            --animate-duration: 0.75s;
        }

        .animate__slideInRight {
            --animate-duration: 0.75s;
        }

        .animate__fadeInUp {
            --animate-duration: 0.75s;
        }
    </style>
{% endblock %}

{% block body %}
<div class="admin-container animate__animated animate__fadeIn">

    <a href="{{ path('app_admin_user_index') }}" class="btn-retour" title="Retour à la liste">
        <i class="fas fa-arrow-left"></i>
    </a>

    <h1 class="animate__animated animate__slideInDown">Créer un utilisateur</h1>

    <form method="post" class="register-form">
        {{ form_errors(form) }}

        <div class="form-section animate__animated animate__slideInLeft">
            <h2><i class="fas fa-user-circle mr-2"></i> Informations personnelles</h2>
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.prenom) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-lg'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
            </div>
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.pseudo) }}
                    {{ form_widget(form.pseudo, {'attr': {'class': 'form-control form-control-lg'}}) }}
                    {{ form_errors(form.pseudo) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.initiales) }}
                    {{ form_widget(form.initiales, {'attr': {'class': 'form-control form-control-lg'}}) }}
                    {{ form_errors(form.initiales) }}
                </div>
            </div>
        </div>

        <div class="form-section animate__animated animate__slideInRight animate__delay-0-2s">
            <h2><i class="fas fa-envelope mr-2"></i> Informations de contact</h2>
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg'}}) }}
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="form-section animate__animated animate__slideInLeft animate__delay-0-4s">
            <h2><i class="fas fa-cog mr-2"></i> Paramètres avancés</h2>
            <div class="form-group">
                {{ form_label(form.password) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control form-control-lg'}}) }}
                {{ form_errors(form.password) }}
            </div>

            <div class="form-group">
                {{ form_label(form.roles) }}
                <div class="form-check">
                    {{ form_widget(form.roles) }}
                </div>
                {{ form_errors(form.roles) }}
            </div>

            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.valid) }}
                    {{ form_widget(form.valid, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_errors(form.valid) }}
                </div>
            </div>
        </div>

        {{ form_rest(form) }}

        <button type="submit" class="btn btn-lg btn-primary-animated btn-block animate__animated animate__fadeInUp animate__delay-0-8s">
            <i class="fas fa-save mr-2"></i> Créer
        </button>
    </form>
</div>
{% endblock %}